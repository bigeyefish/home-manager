<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.honeypotato.homemanager.dao.RolePermissionMapper">
    <resultMap id="BaseResultMap" type="com.honeypotato.homemanager.model.RolePermission">
        <!--
          WARNING - @mbg.generated
        -->
        <id column="id" property="id" jdbcType="VARCHAR"/>
        <result column="permission_id" property="permissionId" jdbcType="VARCHAR"/>
        <result column="role_id" property="roleId" jdbcType="VARCHAR"/>
    </resultMap>
    <select id="getPermissionByUserId" resultType="string" parameterType="string">
        select distinct p.value
        from permission p,
             role_permission rp,
             user_role ur
        where p.id = rp.permission_id
          and ur.role_id = rp.role_id
          and ur.user_id = #{userId,jdbcType=VARCHAR}
          and p.is_disable = 0
    </select>
</mapper>